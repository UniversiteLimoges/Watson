{% extends "layout.html.twig" %}

{% block title %}Home{% endblock %}

{% block content %}
	<div class="row links">
		{% for link in links %}
			<div class="col-md-4">
			    <h2 class="text-center"><a class="linkTitle" href="{{ path('link', { 'id': link.id }) }}">{{ link.title }}</a></h2>
			    <p>{{ link.desc }}</p>
			    <a class="glyphicon glyphicon-link" href="{{ link.url }}" title="" target="_blank"></a>
			    <em>(par <strong>{{ link.user.username }}</strong>)</em>

			    {% for tag in link.tags %}
			    	<a href="{{ path('tag', { 'id': tag.id }) }}" title="Filtrer">
			    		{{ tag.title }}
			    	</a>
			    {% endfor %}
			</div>
		{% endfor %}
	</div>
{% endblock %}
